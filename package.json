  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment NODE_ENV:production",
    "start": "node dist/server.js",
    "prod": "yarn prisma:prod && node dist/server.js",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "review": "rm -rf node_modules/.cache && yarn && yarn prisma:update && yarn start",
    "prisma:init": "prisma migrate reset",
    "prisma:update": "prisma migrate dev",
    "prisma:prod": "prisma migrate deploy",
    "docker:db": "docker-compose -f prisma/docker-compose.yml up -d",
    "docker:build": "docker build . -t wepay-api",
    "docker:run": "docker run --env-file ./.env -p 9000:9000 --name wepay-api wepay-api",
    "docker": "yarn docker:build & yarn docker:run",
    "ts-node": "ts-node -P tsconfig.commonjs.json -r tsconfig-paths/register",
    "prepare": "husky install",
    "clean": "rm -rf node_modules && yarn"
  },
